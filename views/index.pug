extends layout

block content
  h1=title
  p
        a.button(href='/') Home
  p
    a.button(href='/books/new') Create New Book
  form(method='post' action='/books/search')
    input#search(name='search' type='text' placeholder='Search')
    input(type='submit' value='Search')
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href = "/books/" + book.id)= book.title
          td= book.author
          td= book.genre
          td= book.year
    if pageNumber
      each page in pageNumber
        a.pages(href='/books/page/' + page)= page

