extends layout

block content
  h1=title
  p
    a.button(href='/books/new') Create New Book
  p
    a.button(href='/books/search/' + title.value) Search
    input#title(name='title' type='text' placeholder='Search')
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href = "/books/" + book.id)= book.title
          td= book.author
          td= book.genre
          td= book.year

